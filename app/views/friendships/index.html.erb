



<div class="row darkgreen">
	<div class="col-sm-4"></div>
	<div class="col-sm-4">
		<h3>Your Friends</h3>
			<table class="contents">
				<thead>
					<tr>
						<th>Name</th>
						<th>Options</th>
					</tr>
				</thead>
				<tbody>
					<% if @friends %>
					<% @friends.each do |person| %>
					<tr>
						<td><%= link_to "#{person.firstname} #{person.lastname}", user_path(:user_id => person.id) %></td>
						<td><%= link_to "Send Message", new_message_path(:user_id => person.id), :method => :post %> |
							<%= link_to "Remove", remove_friend_path(:user_id => person.id), :method => :delete %>
						</td>
					</tr>	
					<% end %>
					<% end %>
				</tbody>
			</table>
	</div>
	<div class="col-sm-4"></div>
</div>	

<div class="row green">
	<div class="col-sm-4"></div>
	<div class="col-sm-4">

		<h3>Other Members of Our Community</h3>

		<table class="contents">
			<thead>
				<tr>
					<th>Name</th>
					<th>Options</th>
				</tr>
			</thead>
			<tbody>
				<% if @people %>
				<% @people.each do |person| %>
				<tr>
					<td><%= person.firstname %> <%= person.lastname %></td>
					<td><%= link_to "Add Friend", add_friend_path(:id => person.id), :method => :post %></td>
				</tr>	
				<% end %>
				<% end %>
			</tbody>
		</table>
	</div>
	<div class="col-sm-4"></div>
</div>