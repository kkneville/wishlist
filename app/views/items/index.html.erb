



<div class="row green ">
	<div class="col-sm-4"></div>
	<div class="col-sm-4">
			<h4>Welcome, <%= @user.firstname%>!</h4>
			<h3>Wishlist</h3>

			<table class="contents">
				<thead>
					<tr>
						<th>Item Name</th>
						<th>Price</th>
						<th>Options</th>
					</tr>
				</thead>
				<tbody>
				<% if @wishes %>
				<% @wishes.each do |item| %>
				<tr>
					<td><%= item.name %> </td>
					<td><%= item.price %> </td>
					<td><%= link_to "Remove", remove_item_path(:id => item.id), :method => :delete %></td>
				</tr>
				<% end %>
				<% end %>
				</tbody>
			</table>
	</div>
	<div class="col-sm-4"></div>
</div>				


<div class="row darkgreen">
	<div class="col-sm-4"></div>
	<div class="col-sm-4 text-right">
			<h3>Add a New Item</h3>

			<form class="form" action="/items/create" method="post">
			<input type="hidden" name="authenticity_token" placeholder="<%= form_authenticity_token %>">
			<p><input type="text" name="item[name]" placeholder="Item Name"></p>
			<p><input type="integer" name="item[price]" placeholder="Approx Price"></p>
			<p><button type="submit">Add</button></p>
			</form>
	</div>
	<div class="col-sm-4"></div>		
</div>



<div class="row green">
	<div class="col-sm-4"></div>
	<div class='col-sm-4'>
			<h3>Items on Other People's Wishlist</h3>

			<table class="contents">
				<thead>
					<tr>
						<th>Item Name</th>
						<th>Price</th>
						<th>Options</th>
					</tr>
				</thead>
				<tbody>
				<% if @other %>
				<% @other.each do |item| %>
				<tr>
					<td><%= item.name %></td>
					<td><%= item.price %> </td>
					<td><%= link_to "Add to Wishlist", add_wish_path(:item_id => item.id), :method => :post %></td>
				</tr>
				<% end %>
				<% end %>
				</tbody>
			</table>
	</div>
	<div class="col-sm-4"></div>
</div>	


